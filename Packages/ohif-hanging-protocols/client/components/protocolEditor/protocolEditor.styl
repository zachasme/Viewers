@import "{ohif:design}/app"

$height = 20px

#protocolEditor
  theme('background', '$primaryBackgroundColor')
  height: 100%
  width: 450px
  padding: 10px 0
  position: absolute
  top: 0

  p
  h2
  h3
  h4
    theme('color', '$defaultColor')

  label
  ul
    theme('color', '$defaultColor')
    font-weight: 400

  label
    margin-right: 10px
    width: 25%

  input[type='number']
  input[type='text']
    min-width: 50px
    width: 40%
    border: none
    background: #212121
    theme('color', '$defaultColor')
    text-align: center

  button.btn
    background: #ffffff
    color: #3e3e3e

  .color
    display: inline-block
    width: 2em
    height: 2em
    background-color: red

  .normalText
    color: #9ccef9
